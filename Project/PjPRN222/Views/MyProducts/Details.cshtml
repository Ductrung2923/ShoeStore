@model PjPRN222.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_MenuSaler.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4 rounded-lg border-0">
        <form asp-action="editpro" method="post">
            <input type="hidden" asp-for="ProductId" />

            <div class="row">
                <!-- Hình ảnh sản phẩm -->
                <div class="col-md-4 text-center">
                    <div class="border rounded-lg p-3 bg-light">
                        <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.ProductName">
                    </div>
                </div>

                <!-- Chi tiết sản phẩm -->
                <div class="col-md-8">
                    <h2 class="text-primary text-center">Chi tiết sản phẩm</h2>
                    <hr>

                    <div class="form-group">
                        <label class="font-weight-bold">Tên sản phẩm</label>
                        <input style="color: black" type="text" class="form-control border-0 shadow-sm" asp-for="ProductName">
                    </div>

                    <div class="form-group">
                        <label class="font-weight-bold">Mô tả</label>
                        <textarea style="color: black" class="form-control border-0 shadow-sm" asp-for="Description" rows="3"></textarea>
                    </div>

                   

                    <div class="form-group">
                        <label class="font-weight-bold">Giá</label>
                        <input style="color: black" type="number" class="form-control border-0 shadow-sm" asp-for="Price" step="0.01">
                    </div>

                    <div class="form-group">
                        <label class="font-weight-bold">Số lượng</label>
                        <input style="color: black" type="number" class="form-control border-0 shadow-sm" asp-for="Quantity">
                    </div>

                    <div class="form-group">
                        <label class="font-weight-bold">Ngày tạo</label>
                        <input style="color: black" type="date" class="form-control border-0 shadow-sm bg-light" asp-for="CreatedAt" readonly>
                    </div>
                </div>
            </div>

            <!-- Nút điều hướng -->
            <div class="text-center mt-4">
                <button type="submit" class="btn text-white px-4 py-2" style="background-color: #88c8bc; border-radius: 8px; border: none;">Edit</button>
                <a asp-action="Index" class="btn text-white px-4 py-2" style="background-color: #88c8bc; border-radius: 8px; border: none;">Back</a>
                <a asp-action="Delete" asp-route-id="@Model.ProductId"
                   class="btn text-white px-4 py-2"
                   style="background-color: red; border-radius: 8px; border: none;"
                   onclick="return confirm('Do you want Delete product');">
                    Xóa
                </a>
            </div>
        </form>
    </div>
</div>
