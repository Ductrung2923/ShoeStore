@{
    @model List<User>

    Layout = "~/Views/Shared/_MenuAdmin.cshtml";

}
<main>

    <div class="container mt-4">
        <h2 class="text-center text-primary">User Management</h2>
        <div class="table-responsive">
            <table class="table table-striped table-hover text-center shadow-lg">
                <thead class="table-primary">
                    <tr>
                       
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>                        
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Address</td>
                            <td>@user.Role</td>
                            <td>
                                <span class="badge @(user.IsActive ? "bg-success" : "bg-danger") p-2">
                                    @(user.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <form asp-action="Confirm" method="post">
                                    <input type="hidden" name="UserId" value="@user.UserId" />
                                    <button type="submit" class="btn @(user.IsActive ? "btn-outline-danger" : "btn-outline-success")">
                                        @(user.IsActive ? "Deactivate" : "Activate")
                                    </button>
                                </form>

                                <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">
                                    <input type="hidden" name="id" value="@user.UserId" />
                                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #eef2f7;
        }

        h2 {
            font-weight: bold;
            margin-bottom: 20px;
        }

        .table {
            border-radius: 12px;
            overflow: hidden;
        }

            .table th {
                background-color: #007bff !important;
                color: white;
            }

            .table td {
                vertical-align: middle;
            }

        .btn {
            min-width: 120px;
            font-weight: bold;
        }

        .container {
            max-width: 80%;
        }
    </style>

</main>


